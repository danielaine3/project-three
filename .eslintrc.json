{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "impliedStrict": true
    }
  },
  "env": {
    "es6":   true,
    "browser": true,
    "node":  true,
    "mocha":   true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb"
  ],
  "rules": {
    "no-console": 0,
    "func-names": 0,
    "camelcase": 0,
    "no-plusplus": 0,
    "no-underscore-dangle": 0,
    "one-var": 0,
    "one-var-declaration-per-line": 0,
    "no-restricted-syntax": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "max-len": 0,
    "comma-dangle": 0,
    "jsx-a11y/anchor-is-valid": [ "error", { "components": [ "Link" ], "specialLink": [ "to" ] } ]
  }
}